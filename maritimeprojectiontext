    <!-- Chart Scripts -->
    <script>
        // --- Shared Configurations ---
        Chart.defaults.font.family = "'Inter', sans-serif";
        Chart.defaults.color = '#64748b'; // slate-500
        
        // Helper function for label wrapping
        function wrapLabel(str, maxChars) {
            if (str.length <= maxChars) return str;
            const words = str.split(' ');
            const lines = [];
            let currentLine = words[0];

            for (let i = 1; i < words.length; i++) {
                if (currentLine.length + 1 + words[i].length <= maxChars) {
                    currentLine += ' ' + words[i];
                } else {
                    lines.push(currentLine);
                    currentLine = words[i];
                }
            }
            lines.push(currentLine);
            return lines;
        }

        // --- Chart 1: Demand Gap (Stacked Bar) ---
        const ctxDemand = document.getElementById('demandChart').getContext('2d');
        const demandLabels = ['2024', '2025', '2026', '2027', '2028'];
        new Chart(ctxDemand, {
            type: 'bar',
            data: {
                labels: demandLabels,
                datasets: [
                    {
                        label: 'Drydock Capacity (Slots)',
                        data: [12000, 12200, 12500, 12800, 13000],
                        backgroundColor: '#06b6d4', // Cyan
                        stack: 'Stack 0',
                    },
                    {
                        label: 'Non-Compliant Vessels',
                        data: [5000, 9000, 15000, 22000, 28000],
                        backgroundColor: '#f43f5e', // Rose
                        stack: 'Stack 1',
                    }
                ]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { position: 'bottom' },
                    tooltip: {
                        callbacks: {
                            title: function(tooltipItems) {
                                const item = tooltipItems[0];
                                let label = item.chart.data.labels[item.dataIndex];
                                return Array.isArray(label) ? label.join(' ') : label;
                            }
                        }
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        title: { display: true, text: 'Number of Vessels' }
                    }
                }
            }
        });

        // --- Chart 2: Financials (Mixed Line/Bar) ---
        const ctxFinancial = document.getElementById('financialChart').getContext('2d');
        new Chart(ctxFinancial, {
            type: 'bar',
            data: {
                labels: ['Year 1', 'Year 2', 'Year 3', 'Year 4'],
                datasets: [
                    {
                        type: 'bar',
                        label: 'Revenue ($M)',
                        data: [1.2, 3.5, 8.2, 15.5],
                        backgroundColor: '#4338ca', // Indigo
                        borderRadius: 4
                    },
                    {
                        type: 'line',
                        label: 'EBITDA ($M)',
                        data: [-1.8, -0.9, 1.2, 5.8], // Break even in Year 3
                        borderColor: '#10b981', // Emerald
                        borderWidth: 3,
                        tension: 0.3,
                        pointBackgroundColor: '#fff',
                        pointBorderWidth: 2,
                        pointRadius: 5
                    }
                ]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { position: 'bottom' },
                    tooltip: {
                        mode: 'index',
                        intersect: false,
                        callbacks: {
                            title: function(tooltipItems) {
                                const item = tooltipItems[0];
                                let label = item.chart.data.labels[item.dataIndex];
                                return Array.isArray(label) ? label.join(' ') : label;
                            }
                        }
                    }
                },
                scales: {
                    y: {
                        title: { display: true, text: 'USD Millions' },
                        grid: { borderDash: [2, 4] }
                    }
                }
            }
        });

        // --- Chart 3: Capital Allocation (Doughnut) ---
        const ctxCapital = document.getElementById('capitalChart').getContext('2d');
        const capitalLabelsRaw = ['R&D Hardware', 'Sales & Marketing', 'Operations & Pilots', 'Legal & IP', 'G&A'];
        const capitalLabels = capitalLabelsRaw.map(l => wrapLabel(l, 16));

        new Chart(ctxCapital, {
            type: 'doughnut',
            data: {
                labels: capitalLabels,
                datasets: [{
                    data: [45, 20, 20, 10, 5],
                    backgroundColor: [
                        '#4338ca', // Indigo
                        '#06b6d4', // Cyan
                        '#f43f5e', // Rose
                        '#f59e0b', // Amber
                        '#94a3b8'  // Gray
                    ],
                    borderWidth: 0
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                cutout: '60%',
                plugins: {
                    legend: { position: 'right', labels: { boxWidth: 12 } },
                    tooltip: {
                        callbacks: {
                            title: function(tooltipItems) {
                                const item = tooltipItems[0];
                                let label = item.chart.data.labels[item.dataIndex];
                                return Array.isArray(label) ? label.join(' ') : label;
                            }
                        }
                    }
                }
            }
        });

        // --- Chart 4: Unit Economics (Horizontal Bar) ---
        const ctxEconomics = document.getElementById('economicsChart').getContext('2d');
        new Chart(ctxEconomics, {
            type: 'bar',
            data: {
                labels: ['Year 1', 'Year 2', 'Year 3'],
                datasets: [
                    {
                        label: 'CAC ($)',
                        data: [65000, 55000, 45000],
                        backgroundColor: 'rgba(244, 63, 94, 0.8)', // Rose with opacity
                        borderColor: '#f43f5e',
                        borderWidth: 1
                    },
                    {
                        label: 'LTV ($)',
                        data: [150000, 220000, 320000],
                        backgroundColor: 'rgba(6, 182, 212, 0.8)', // Cyan with opacity
                        borderColor: '#06b6d4',
                        borderWidth: 1
                    }
                ]
            },
            options: {
                indexAxis: 'y', // Horizontal Bar
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { position: 'bottom', labels: { color: '#e2e8f0' } }, // Light text for dark bg
                    tooltip: {
                        callbacks: {
                            title: function(tooltipItems) {
                                const item = tooltipItems[0];
                                let label = item.chart.data.labels[item.dataIndex];
                                return Array.isArray(label) ? label.join(' ') : label;
                            }
                        }
                    }
                },
                scales: {
                    x: {
                        ticks: { color: '#cbd5e1' },
                        grid: { color: '#334155' }
                    },
                    y: {
                        ticks: { color: '#cbd5e1' },
                        grid: { display: false }
                    }
                }
            }
        });
    </script>
    
